<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="page.main.title" remove="true"/>
        <referenceContainer name="columns.top" remove="true"/>

        <referenceContainer name="content">
            <referenceBlock name="category.products" remove="true"/>
            <referenceContainer name="sidebar.additional" remove="true" />
            <block class="DrinksAndCo\CustomizeProduct\Block\Product" name="catalog_products_list" template="DrinksAndCo_CustomizeProduct::product/list.phtml" />
        </referenceContainer>
    </body>
</page>
